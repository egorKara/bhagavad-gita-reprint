{
  "tabWidth": 4,
  "useTabs": false,
  "singleQuote": true,
  "trailingComma": "none",
  "printWidth": 120,
  "bracketSpacing": true,
  "semi": true,
  "endOfLine": "lf",
  "htmlWhitespaceSensitivity": "css",
  "cssEnable": ["css", "scss", "sass"],
  "overrides": [
    {
      "files": "*.css",
      "options": {
        "parser": "css",
        "printWidth": 100
      }
    },
    {
      "files": "*.html",
      "options": {
        "parser": "html",
        "htmlWhitespaceSensitivity": "ignore"
      }
    },
    {
      "files": "*.js",
      "options": {
        "parser": "babel",
        "singleQuote": true
      }
    }
  ]
}