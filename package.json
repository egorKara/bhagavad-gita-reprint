{
  "name": "cursor-security-agent",
  "version": "1.0.0",
  "description": "Автоматический агент безопасности для отслеживания утечки секретной информации в проектах Cursor IDE",
  "main": "src/services/security-agent.js",
  "bin": {
    "cursor-security": "src/cli/security-cli.js"
  },
  "scripts": {
    "start": "node src/cli/security-cli.js monitor",
    "scan": "node src/cli/security-cli.js scan",
    "monitor": "node src/cli/security-cli.js monitor",
    "stop": "node src/cli/security-cli.js stop",
    "report": "node src/cli/security-cli.js report",
    "stats": "node src/cli/security-cli.js stats",
    "test": "node tests/security-agent.test.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "setup": "chmod +x start-security-agent.sh && chmod +x scripts/*.sh",
    "install:scripts": "npm run setup",
    "security:quick": "node src/cli/security-cli.js scan --path .",
    "security:full": "node src/cli/security-cli.js scan --path . --depth 5",
    "security:monitor": "./start-security-agent.sh"
  },
  "keywords": [
    "security",
    "cursor",
    "ide",
    "secrets",
    "api-keys",
    "passwords",
    "tokens",
    "monitoring",
    "background-agent",
    "github-secrets",
    "security-scanning",
    "code-security"
  ],
  "author": "Cursor Security Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cursor-ide/security-agent.git"
  },
  "bugs": {
    "url": "https://github.com/cursor-ide/security-agent/issues"
  },
  "homepage": "https://github.com/cursor-ide/security-agent#readme",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^9.4.1",
    "fs-extra": "^11.1.1",
    "glob": "^8.0.3",
    "minimatch": "^5.1.0",
    "ora": "^5.4.1",
    "table": "^6.8.1"
  },
  "devDependencies": {
    "eslint": "^8.40.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.3"
  },
  "files": [
    "src/",
    "scripts/",
    "*.sh",
    "*.md",
    "LICENSE"
  ],
  "directories": {
    "src": "src",
    "scripts": "scripts",
    "tests": "tests",
    "docs": "docs"
  },
  "publishConfig": {
    "access": "public"
  },
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ]
}
