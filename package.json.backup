{
    "name": "bhagavad-gita-1972-reprint",
    "version": "1.0.0",
    "description": "Официальный репринт Бхагавад-Гиты 1972 года - лицензированное издание Bhaktivedanta Book Trust",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "format": "prettier --write \"**/*.{css,html,js,json,md}\"",
        "format:css": "prettier --write \"**/*.css\"",
        "lint:css": "stylelint \"**/*.css\"",
        "lint:css:fix": "stylelint \"**/*.css\" --fix",
        "lint:html": "htmlhint \"**/*.html\"",
        "format:html": "prettier --write \"**/*.html\"",
        "lint:js": "eslint \"**/*.js\"",
        "lint:js:fix": "eslint \"**/*.js\" --fix",
        "format:js": "prettier --write \"**/*.js\"",
        "validate:all": "npm run lint:css && npm run lint:html && npm run lint:js && prettier --check .",
        "check": "npm run lint:css && npm run lint:js && prettier --check \"**/*.{css,html,js,json,md}\"",
        "docs": "jsdoc -c jsdoc.conf.json",
        "docs:watch": "jsdoc -c jsdoc.conf.json --watch",
        "lighthouse": "lhci autorun",
        "lighthouse:legacy": "lhci autorun --config=lighthouserc-legacy.cjs",
        "dev": "python3 -m http.server 8000 --bind 127.0.0.1 --directory public",
        "serve": "python3 -m http.server 8002 --bind 127.0.0.1 --directory public",
        "prepare": "husky"
    },
    "keywords": [
        "bhagavad-gita",
        "1972",
        "reprint",
        "prabhupada",
        "vedic",
        "philosophy",
        "iskcon",
        "krishna"
    ],
    "author": "A.C. Bhaktivedanta Swami Prabhupada",
    "license": "BBT",
    "devDependencies": {
        "@eslint/js": "^9.34.0",
        "autoprefixer": "^10.4.21",
        "eslint": "^9.34.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-security": "^3.0.1",
        "htmlhint": "^1.1.4",
        "husky": "^9.1.7",
        "jsdoc": "^4.0.4",
        "postcss": "^8.5.6",
        "prettier": "^3.1.0",
        "stylelint": "^15.11.0",
        "stylelint-config-standard": "^34.0.0",
        "tailwindcss": "^3.4.17",
        "typescript": "^5.9.2",
        "vite": "^3.2.11"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/egorKara/bhagavad-gita-reprint.git"
    },
    "homepage": "https://gita-1972-reprint.ru",
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.css": [
            "stylelint --fix",
            "prettier --write"
        ],
        "*.html": [
            "htmlhint",
            "prettier --write"
        ],
        "*.{json,md}": [
            "prettier --write"
        ]
    }
}
